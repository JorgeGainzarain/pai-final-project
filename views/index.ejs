<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link rel="stylesheet" href="/styles/<%= theme %>.css">
    <script src="https://kit.fontawesome.com/bfe42d90a4.js" crossorigin="anonymous"></script>
    <script src="/dark-mode.js" defer></script>
    <style>
        .user-box {
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        .user-box .user-icon {
            margin-left: 10px;
        }
        .user-box span {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div id="dark-mode-toggle">
        <button id="dark-mode-toggle-button">
            <i class="fa fa-moon"></i>
        </button>
    </div>
    <nav>
        <a href="#" data-tab="home" onclick="showHome()">Home</a>
        <a href="#" data-tab="stories" onclick="showStories()">Browse Stories</a>
        <% if (user) { %>
            <a href="#" data-tab="my-stories" onclick="showMyStories()">My Stories</a>
            <a href="#" data-tab="create-story" onclick="showCreateStory()">Create Story</a>
            <a href="#" data-tab="settings" onclick="showSettings()">Settings</a>
        <% } %>
        <div class="user-box" onclick="toggleDropdown()">
            <% if (user) { %>
                <span><%= user.username %></span>
            <% } else { %>
                <span>Guest</span>
            <% } %>
            <img src="/user.png" alt="User Icon" class="user-icon">
        </div>
        <div class="dropdown" id="userDropdown">
            <% if (user) { %>
                <a href="#" onclick="document.getElementById('logoutForm').submit();">Sign Out</a>
            <% } else { %>
                <a href="/login">Login</a>
                <a href="/signup">Sign Up</a>
            <% } %>
        </div>
    </nav>
    <div class="header" id="header"></div>
    <div class="content" id="content"></div>
    <form id="logoutForm" action="/logout" method="POST" style="display: none;">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        function showSettings() {
            const header = document.getElementById('header');
            const content = document.getElementById('content');
            header.innerHTML = '<h1>Settings</h1>';
            const imgPath = '/construction.png';
            content.innerHTML = `
                <img src="${imgPath}" alt="Under Construction" class="construction-image">
            `;
        }

        function showHome() {
            const header = document.getElementById('header');
            const content = document.getElementById('content');
            header.innerHTML = `<% if (user) { %>
                <h1>Welcome, <%= user.fullName %></h1>
                <p class="welcome-message">We're glad to have you back!</p>
            <% } else { %>
                <h1>Welcome, Guest</h1>
                <p class="welcome-message">Please log in to access more features.</p>
            <% } %>`;
            content.innerHTML = '<p>This is your dashboard where you can manage your account, view your profile, and adjust your settings. Explore the options above to get started.</p>';
        }

        async function showStories() {
            fetch('/showStories.ejs')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('header').innerHTML = '<h1>Browse Stories</h1>';
                    document.getElementById('content').innerHTML = html;
                });
        }

        function showCreateStory() {
            fetch('/createStory.ejs')
                .then(response => response.text())
                .then(html => {
                    document.getElementById('header').innerHTML = '<h1>Create a New Story</h1>';
                    document.getElementById('content').innerHTML = html;
                });
        }

        function moveLeft() {
            // Implement the logic to move left
        }

        function moveRight() {
            // Implement the logic to move right
        }

        document.addEventListener('DOMContentLoaded', () => {
            const tabs = document.querySelectorAll('nav a[data-tab]');
            const currentTab = localStorage.getItem('currentTab') || 'home';

            function showTab(tabName) {
                // Ensure we execute the appropriate function for the tab
                switch (tabName) {
                    case 'home':
                        showHome();
                        break;
                    case 'stories':
                        showStories();
                        break;
                    case 'my-stories':
                        if (typeof showMyStories === 'function') {
                            showMyStories();
                        } else {
                            console.error('showMyStories function is not defined.');
                        }
                        break;
                    case 'create-story':
                        if (typeof showCreateStory === 'function') {
                            showCreateStory();
                        } else {
                            console.error('showCreateStory function is not defined.');
                        }
                        break;
                    case 'settings':
                        showSettings();
                        break;
                    default:
                        showHome();
                }
            }

            // Render the current tab's content
            showTab(currentTab);

            // Update localStorage and handle tab switching
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabName = tab.getAttribute('data-tab');
                    localStorage.setItem('currentTab', tabName);
                    showTab(tabName);
                });
            });
        });


    </script>
</body>
</html>